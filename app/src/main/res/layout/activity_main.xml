<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/CatenaThemeWhite"
    tools:context="dev.kuik.matthijs.serverbasedcounting.MainActivity">

    <dev.kuik.matthijs.serverbasedcounting.ThemeBackground
        android:id="@+id/theme_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:primaryColor="@color/header_background"
        app:scale="0.0" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:focusableInTouchMode="false"
            android:scaleType="fitCenter"
            android:layout_marginTop="@dimen/icon_statusbar_distance"/>

        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/page_background"
            android:layout_marginRight="@dimen/page_margin"
            android:layout_marginLeft="@dimen/page_margin"
            android:layout_marginBottom="@dimen/page_margin">

            <android.support.v4.view.PagerTitleStrip
                android:id="@+id/pager_title_strip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pege_title_strip_height"
                android:paddingRight="@dimen/page_margin"
                android:paddingLeft="@dimen/page_margin"
                style="@style/viepagertitlestrip"/>

        </android.support.v4.view.ViewPager>

    </LinearLayout>

</RelativeLayout>
