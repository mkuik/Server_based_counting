<resources>

    <!-- Base application theme. -->
    <style name="CatenaTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="CatenaThemeBlue" parent="CatenaTheme">
        <item name="android:background">@color/header_background</item>
        <item name="android:textColor">@color/header_text</item>
    </style>

    <style name="CatenaThemeWhite" parent="CatenaTheme">
        <item name="android:textColor">#000</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="viepagertitlestrip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="content_page">
        <item name="android:background">@drawable/content_background</item>
        <item name="android:paddingLeft">@dimen/page_margin</item>
        <item name="android:paddingRight">@dimen/page_margin</item>
        <item name="android:paddingBottom">@dimen/page_margin</item>
    </style>

</resources>
